{
  "manifest_version": 2,
  "name": "Send to Harmony",
  "version": "1.0",
  "description": "Send selected text to Harmony with a right-click. For PDFs, use the popup to paste your selected text.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "harmony@harmonydata.ac.uk"
    }
  }
} 